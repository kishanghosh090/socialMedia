<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <style>
      #myForm {
        animation: slideUp 0.5s ease-in-out;
      }
      @keyframes slideUp {
        0% {
          opacity: 0;
          transform: translateY(30px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>

    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-900 p-5 flex justify-center items-center h-screen"
  >
    <form
      id="myForm"
      class="max-w-sm bg-gray-100 mx-auto w-full space-y-5 text-gray-900 dark:text-white p-5 dark:bg-gray-800 rounded-lg shadow"
    >
      <h1 class="text-3xl font-bold text-center">Register</h1>
      <div class="mb-5">
        <label
          for="username"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Username</label
        >
        <input
          type="text"
          id="username"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"
          placeholder="username"
          required
          name="username"
        />
      </div>
      <div class="mb-5">
        <label
          for="email"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Your email</label
        >
        <input
          type="email"
          id="email"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"
          placeholder="example@gmail.com"
          required
          name="email"
        />
      </div>
      <div class="mb-5">
        <label
          for="email"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Phone number</label
        >
        <input
          type="number"
          id="phonenumber"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"
          placeholder="1234567890"
          required
          name="phonenumber"
        />
      </div>
      <div class="mb-5">
        <label
          for="password"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >
          Password</label
        >
        <input
          type="password"
          id="password"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"
          placeholder="••••••••"
          required
          name="password"
        />
      </div>
      <div>
        <a
          href="http://localhost:5002/api/v1/users/login"
          class="text-sm font-medium text-gray-600 hover:underline dark:text-gray-500"
          >Already have an account?</a
        >
      </div>
      <button
        type="submit"
        class="w-full text-white bg-purple-600 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-purple-600 dark:hover:bg-purple-800 dark:focus:ring-blue-800"
      >
        Register new account
      </button>
    </form>
    <div class="sucess"></div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
  <script>
    document
      .getElementById("myForm")
      .addEventListener("submit", async (event) => {
        event.preventDefault(); // Prevent the form from refreshing the page

        // Gather form data
        const formData = new FormData(event.target);
        const data = Object.fromEntries(formData.entries());
        console.log(JSON.stringify(data));

        try {
          const response = await fetch(
            "https://social-media-drab-nu.vercel.app/api/v1/users/register",
            {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data), // Convert data to JSON
            }
          );
          const myData = await response.json();
          console.log(myData);

          if (response.ok) {
            alert("Form submitted successfully!");
            window.location.href = "/api/v1/users/login"; // Redirect to login
          } else {
            console.error("Error:", response.statusText);
            alert("There was an error submitting the form.");
          }
        } catch (error) {
          console.error("Error:", error);
          alert("An error occurred while submitting the form.");
        }
      });
  </script>
</html>
