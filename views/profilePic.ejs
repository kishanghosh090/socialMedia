<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />

    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-900 p-5 flex justify-center items-center h-screen"
  >
    <form
      action="/api/v1/users/profilePic"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-6 flex flex-col items-evenly w-full max-w-xs mx-auto p-5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
    >
      <!-- Display Profile Image -->
      <div class="flex flex-col items-center">
        <div
          class="w-32 h-32 rounded-full overflow-hidden border border-gray-300"
        >
          <img
            src=""
            id="profile-preview"
            alt="Profile picture"
            class="bg-gradient-to-r from-violet-500 to-fuchsia-500 w-full h-full object-cover object-center flex items-center justify-center"
          />
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Supported formats: JPG, PNG, GIF
        </p>
      </div>

      <!-- File Input -->
      <div class="flex justify-center">
        <label class="cursor-pointer">
          <input
            type="file"
            name="avatar"
            accept="image/*"
            id="profile-pic-input"
            class="hidden"
            onchange="updatePreview(event)"
          />
          <span
            class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600"
          >
            Choose File
          </span>
        </label>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-between items-center gap-2 w-full max-w-md">
        <a
          href="/api/v1/users/home"
          class="bg-purple-500 py-2 rounded-lg hover:bg-purple-600 transition  w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition text-center"
          >Skip</a
        >
        <button
          type="submit"
          class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition"
        >
          Upload
        </button>
      </div>
    </form>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>

  <script>
    // JavaScript to update the profile image preview
    function updatePreview(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          document.getElementById("profile-preview").src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    }
  </script>
</html>
