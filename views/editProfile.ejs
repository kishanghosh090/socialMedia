<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />

    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-900 p-5 flex justify-center items-center flex-col gap-5"
  >
    <div
      class="flex flex-col gap-5 items-center w-full max-w-md mx-auto p-5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
    >
      <h1 class="text-3xl font-bold text-center text-gray-900 dark:text-white">
        Edit Profile
      </h1>
      <form
        action="/api/v1/users/editProfilePic"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-6 flex flex-col items-evenly w-full max-w-xs mx-auto p-5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
      >
        <!-- Display Profile Image -->
        <div class="flex flex-col items-center">
          <div
            class="w-32 h-32 rounded-full overflow-hidden border border-gray-300"
          >
            <img
              src="<%= user.avatar %>"
              id="profile-preview"
              alt="Profile picture"
              class="bg-gradient-to-r from-violet-500 to-fuchsia-500 w-full h-full object-cover object-center flex items-center justify-center"
            />
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Supported formats: JPG, PNG, GIF
          </p>
        </div>

        <!-- File Input -->
        <div class="flex justify-center">
          <label class="cursor-pointer">
            <input
              type="file"
              name="avatar"
              accept="image/*"
              id="profile-pic-input"
              class="hidden"
              onchange="updatePreview(event)"
            />
            <span
              class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600"
            >
              Choose File
            </span>
          </label>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-between items-center gap-2 w-full max-w-md">
          <button
            type="submit"
            class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition"
          >
            Change Picture
          </button>
        </div>
      </form>
      <form
        class="max-w-md mx-auto"
        method="post"
        action="/api/v1/users/editUserName"
      >
        <!-- // current username -->

        <div class="relative z-0 w-full mb-5 group">
          <input
            type="text"
            name="username"
            id="floating_email"
            class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
            placeholder=" "
            required
          />
          <label
            for="floating_email"
            class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
            >New Username</label
          >
        </div>
        <button
          type="submit"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Change Username
        </button>
      </form>

      <form
        class="max-w-md mx-auto"
        method="post"
        action="/api/v1/users/editPassword"
      >
        <div class="relative z-0 w-full mb-5 group">
          <input
            type="password"
            name="password"
            id="floating_password"
            class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
            placeholder=" "
            required
          />
          <label
            for="floating_password"
            class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
          >
            New Password</label
          >
        </div>
        <button
          type="submit"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Change Password
        </button>
      </form>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
  <script>
    // JavaScript to update the profile image preview
    function updatePreview(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          document.getElementById("profile-preview").src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    }
  </script>
</html>
